{
  "version": 2,
  "builds": [
    {
      "src": "**",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/website-1",
      "destination": "/website 1/index.html"
    },
    {
      "source": "/website-2",
      "destination": "/website 2/index.html"
    },
    {
      "source": "/website-3",
      "destination": "/website 3/index.html"
    },
    {
      "source": "/website-1/:path*",
      "destination": "/website 1/:path*"
    },
    {
      "source": "/website-2/:path*",
      "destination": "/website 2/:path*"
    },
    {
      "source": "/website-3/:path*",
      "destination": "/website 3/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/(.*)\\.(js|css|jpg|jpeg|png|gif|svg|webp|woff|woff2)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
